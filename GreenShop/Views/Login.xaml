<Page x:Class="GreenShop.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue"
      Title="Login">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Label Grid.Column="1" Content="Log in" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Login"/>
            <TextBox x:Name="TextBoxLogin" Margin="6, 0"/>
            <Label Content="Password"/>
            <TextBox x:Name="TextBoxPassword" Margin="6, 0"/>
            <Button Content="Enter" Margin="60, 10" Background="AntiqueWhite" Template="{DynamicResource ButtonBlur}"/>
            <Button Content="Registration" Margin="60, 10" Background="AntiqueWhite"/>
            <Button Content="Continue with no registration" Margin="60, 10" Background="AntiqueWhite"/>
        </StackPanel>
    </Grid>

</Page>
