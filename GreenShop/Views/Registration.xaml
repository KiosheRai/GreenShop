<Page x:Class="GreenShop.Views.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Window>
        <Window.Resources>
            <LinearGradientBrush x:Key="GradientColor" StartPoint="0, 0" EndPoint="1, 1">
                <GradientStop Offset="0" Color="AntiqueWhite"/>
                <GradientStop Offset="0.5" Color="Violet"/>
                <GradientStop Offset="1" Color="AntiqueWhite"/>
            </LinearGradientBrush>
        </Window.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40px"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40px"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Label Grid.Column="1" Content="Registration" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Background="AliceBlue">
                <Label Content="Login"/>
                <TextBox x:Name="TextBoxLogin" Margin="6, 0"/>
                <Label Content="Password"/>
                <TextBox x:Name="TextBoxPassword" Margin="6, 0"/>
                <Label Content="Email"/>
                <TextBox x:Name="TextBoxEmail" Margin="6, 0"/>
                <Label Content="Phone Number"/>
                <TextBox x:Name="TextBoxPhoneNumber" Margin="6, 0"/>
                <Button Content="Continue" Margin="60, 10" Background="AntiqueWhite"/>
                <Button Content="Already have an account?" Margin="60, 10" Background="AntiqueWhite"/>
                
            </StackPanel>
        </Grid>
    </Window>
</Page>
